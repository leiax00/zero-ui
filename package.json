{
  "private": true,
  "packageManager": "pnpm@7.14.2",
  "workspaces": [
    "packages/*",
    "docs"
  ],
  "scripts": {
    "dev": "vite",
    "build": "vue-tsc && vite build",
    "preview": "vite preview",
    "lint": "eslint . --ext .vue,.js,.ts,.jsx,.tsx,.md,.json --max-warnings 0 --cache",
    "lint:fix": "pnpm run lint --fix"
  },
  "peerDependencies": {
    "vue": "^3.2.0"
  },
  "dependencies": {
    "@vueuse/core": "^9.4.0",
    "@zero-ui/components": "workspace:^0.0.5",
    "@zero-ui/constants": "workspace:*",
    "@zero-ui/hooks": "workspace:*",
    "@zero-ui/utils": "workspace:*",
    "lodash": "^4.17.21",
    "lodash-es": "^4.17.21",
    "lodash-unified": "^1.0.3"
  },
  "devDependencies": {
    "@types/lodash-es": "*",
    "@types/node": "^18.11.9",
    "@vitejs/plugin-vue": "^3.2.0",
    "@zero-ui/eslint-config": "workspace:*",
    "eslint": "^8.18.0",
    "eslint-define-config": "^1.5.1",
    "prettier": "^2.7.1",
    "sass": "^1.56.0",
    "typescript": "^4.8.4",
    "unplugin-vue-define-options": "^0.12.7",
    "unplugin-vue-macros": "^0.16.0",
    "vite": "^3.2.2",
    "vite-plugin-dts": "^1.6.6",
    "vue": "^3.2.41",
    "vue-tsc": "^1.0.9"
  },
  "engines": {
    "node": ">= 16"
  },
  "pnpm": {
    "peerDependencyRules": {
      "ignoreMissing": [
        "vite",
        "react",
        "react-dom"
      ]
    }
  },
  "lint-staged": {
    "*.{vue,js,ts,jsx,tsx,md,json}": "eslint --fix"
  }
}
