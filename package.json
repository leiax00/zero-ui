{
  "private": true,
  "packageManager": "pnpm@7.14.2",
  "scripts": {
    "dev": "vite",
    "up_version": "pnpm -C packages/zero-ui exec pnpm version patch",
    "build": "vite build -c ./packages/zero-ui/vite.config.ts",
    "build:helper": "npm run -C internal/helper ideHelper ",
    "build:all": "pnpm -w up_version && pnpm -w build && pnpm -w build:helper",
    "publish": "pnpm -F @leiax00/zero-ui exec pnpm publish",
    "preview": "vite preview",
    "lint": "eslint . --ext .vue,.js,.ts,.jsx,.tsx,.md,.json --max-warnings 0 --cache",
    "lint:fix": "pnpm run lint --fix"
  },
  "peerDependencies": {
    "vue": "^3.2.0"
  },
  "dependencies": {
    "@leiax00/components": "workspace:*",
    "@leiax00/constants": "workspace:*",
    "@leiax00/hooks": "workspace:*",
    "@leiax00/utils": "workspace:*",
    "@leiax00/zero-ui": "workspace:*",
    "@vueuse/core": "^9.4.0",
    "lodash": "^4.17.21",
    "lodash-es": "^4.17.21",
    "lodash-unified": "^1.0.3"
  },
  "devDependencies": {
    "@types/jsdom": "^20.0.1",
    "@types/lodash-es": "*",
    "@types/node": "^18.11.9",
    "@vitejs/plugin-vue": "^3.2.0",
    "@leiax00/eslint-config": "workspace:*",
    "eslint": "^8.18.0",
    "eslint-define-config": "^1.5.1",
    "jsdom": "^20.0.2",
    "prettier": "^2.7.1",
    "sass": "^1.56.0",
    "ts-node": "^10.9.1",
    "typescript": "^4.8.4",
    "unplugin-vue-define-options": "^0.12.7",
    "unplugin-vue-macros": "^0.16.0",
    "vite": "^3.2.2",
    "vite-plugin-dts": "^1.6.6",
    "vue": "^3.2.41",
    "vue-tsc": "^1.0.9"
  },
  "engines": {
    "node": ">= 16"
  },
  "pnpm": {
    "peerDependencyRules": {
      "ignoreMissing": [
        "vite",
        "react",
        "react-dom"
      ]
    }
  },
  "lint-staged": {
    "*.{vue,js,ts,jsx,tsx,md,json}": "eslint --fix"
  }
}
